<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <include layout="@layout/space"/>

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button_clear_all"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginStart="@dimen/tool_margin"
                    android:layout_marginEnd="@dimen/tool_margin"
                    android:onClick="clearAll"
                    android:contentDescription="@string/content_descr_clear_all"
                    app:srcCompat="@android:drawable/ic_menu_delete" />

                <ImageButton
                    android:id="@+id/button_text"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginStart="@dimen/tool_margin"
                    android:layout_marginEnd="@dimen/tool_margin"
                    android:onClick="text"
                    android:contentDescription="@string/content_descr_text"
                    app:srcCompat="@android:drawable/ic_menu_edit" />

                <ImageButton
                    android:id="@+id/button_snap"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginStart="@dimen/tool_margin"
                    android:layout_marginEnd="@dimen/tool_margin"
                    android:onClick="snap"
                    android:contentDescription="@string/content_descr_snap"
                    app:srcCompat="@android:drawable/ic_menu_camera" />

                <ImageButton
                    android:id="@+id/button_pick"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginStart="@dimen/tool_margin"
                    android:layout_marginEnd="@dimen/tool_margin"
                    android:onClick="pick"
                    android:contentDescription="@string/content_descr_pick"
                    app:srcCompat="@android:drawable/ic_menu_gallery" />

                <ImageButton
                    android:id="@+id/button_save"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginStart="@dimen/tool_margin"
                    android:layout_marginEnd="@dimen/tool_margin"
                    android:onClick="save"
                    android:contentDescription="@string/content_descr_save"
                    app:srcCompat="@android:drawable/ic_menu_save" />

                <ImageButton
                    android:id="@+id/button_share"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginStart="@dimen/tool_margin"
                    android:layout_marginEnd="@dimen/tool_margin"
                    android:onClick="share"
                    android:contentDescription="@string/content_descr_share"
                    app:srcCompat="@android:drawable/ic_menu_share" />
        </LinearLayout>

        <include layout="@layout/space"/>

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button_clear_active"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginStart="@dimen/tool_margin"
                    android:layout_marginEnd="@dimen/tool_margin"
                    android:onClick="clearActive"
                    android:contentDescription="@string/content_descr_clear_active"
                    app:srcCompat="@android:drawable/ic_menu_revert" />

                <ImageButton
                    android:id="@+id/button_rotate_left"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginStart="@dimen/tool_margin"
                    android:layout_marginEnd="@dimen/tool_margin"
                    android:scaleX="1"
                    android:onClick="rotateLeft"
                    android:contentDescription="@string/content_descr_rotate_left"
                    app:srcCompat="@android:drawable/ic_menu_rotate" />

                <ImageButton
                    android:id="@+id/button_rotate_right"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginStart="@dimen/tool_margin"
                    android:layout_marginEnd="@dimen/tool_margin"
                    android:scaleX="-1"
                    android:onClick="rotateRight"
                    android:contentDescription="@string/content_descr_rotate_right"
                    app:srcCompat="@android:drawable/ic_menu_rotate" />

                <ImageButton
                    android:id="@+id/button_fit_cell"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginStart="@dimen/tool_margin"
                    android:layout_marginEnd="@dimen/tool_margin"
                    android:onClick="fillCell"
                    android:contentDescription="@string/content_descr_fill_cell"
                    app:srcCompat="@drawable/ic_menu_fit" />

                <ImageButton
                    android:id="@+id/button_fill_cell"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginStart="@dimen/tool_margin"
                    android:layout_marginEnd="@dimen/tool_margin"
                    android:onClick="fitCell"
                    android:contentDescription="@string/content_descr_fit_cell"
                    app:srcCompat="@drawable/ic_menu_fill" />

                <ImageButton
                    android:id="@+id/button_pick_layout"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginStart="@dimen/tool_margin"
                    android:layout_marginEnd="@dimen/tool_margin"
                    android:onClick="pickLayout"
                    android:contentDescription="@string/content_descr_pick_layout"
                    app:srcCompat="@drawable/ic_menu_grid" />

        </LinearLayout>

        <include layout="@layout/space"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button_remove"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginStart="@dimen/tool_margin"
                    android:layout_marginEnd="@dimen/tool_margin"
                    android:onClick="removeActive"
                    android:contentDescription="@string/content_descr_remove"
                    app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

                <ImageButton
                    android:id="@+id/button_insert"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginStart="@dimen/tool_margin"
                    android:layout_marginEnd="@dimen/tool_margin"
                    android:onClick="insertBeforeActive"
                    android:contentDescription="@string/content_descr_insert"
                    app:srcCompat="@android:drawable/ic_menu_add" />

                <ImageButton
                    android:id="@+id/button_guidelines"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginStart="@dimen/tool_margin"
                    android:layout_marginEnd="@dimen/tool_margin"
                    android:onClick="guidelines"
                    android:contentDescription="@string/content_descr_guidelines"
                    app:srcCompat="@drawable/ic_menu_guidelines" />

                <include layout="@layout/space"/>

                <ImageButton
                    android:id="@+id/button_help"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginStart="@dimen/tool_margin"
                    android:layout_marginEnd="@dimen/tool_margin"
                    android:onClick="help"
                    android:contentDescription="@string/content_descr_help"
                    app:srcCompat="@android:drawable/ic_menu_help" />

        </LinearLayout>

        <include layout="@layout/space"/>

</LinearLayout>